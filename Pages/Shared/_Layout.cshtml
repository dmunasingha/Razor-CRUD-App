<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorCRUDApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorCrudApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid w-75">
                <a class="navbar-brand" asp-area="" asp-page="/Dashboard">RazorCRUDApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-sm-inline-flex justify-content-end">
                        <li class="float-end">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <form asp-page="/Auth/Logout" method="post" class="d-inline">
                                    <button type="submit"
                                        class="btn btn-sm px-3 py-2 rounded-pill d-inline-flex align-items-center justify-content-center gap-2 text-danger"
                                        data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Logout">
                                        <i class="bi bi-box-arrow-right fs-4"></i>
                                        <span class="fw-semibold visually-hidden">Logout</span>
                                    </button>
                                </form>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid w-75">
        <main role="main" class="pb-3 h-100 bg-surface-secondary">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RazorCrudApp - <a href="https://github.com/dmunasingha/" target="__blank">Dunith
                Munasingha</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div id="toastContainer" class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
            <!-- Toasts will be injected here dynamically -->
        </div>
    </div>

    <script>
        $(function () {
            var message = '@TempData["ToastMessage"]'; // Pass message from page model
            var type = '@TempData["ToastType"]' || 'success'; // 'success', 'danger', 'info', etc.

            if (message) {
                showToast(message, type);
            }
        });
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>
